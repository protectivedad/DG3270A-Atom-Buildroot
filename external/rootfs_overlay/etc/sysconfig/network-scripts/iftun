#!/bin/sh

DEVICE=$2

up_function() {
	ip link set ${DEVICE} up
	brctl addif br0 ${DEVICE}
}

down_function() {
	brctl delif br0 ${DEVICE}
	ip link set ${DEVICE} down
}

case $1 in
    "up")
    up_function
    ;;
    "down")
    down_function
    ;;
    "restart")
    down_function
    up_function
    ;;
    *)
    echo "Usage: $0 {up|down} device"
esac

