#Script name can be the called name, or something more meaningful.
SCRIPTNAME=$0

. /etc/init.d/init_utilities

start_function() {

if [ ! -f "/nvram/sdk/dhs_autorun"  ]; then
        message="${parent_script}is being skipped.";
        echo "$message";
        # Note that this is a successful exit as we are not
        # _supposed_ to do anything.
        exit 0;
fi;



# create reference to defauly DHS xml cfg file if not exist
if [ ! -f "/nvram/dhs/DSG_Info.xml"  ]; then
    if [ ! -d "/nvram/dhs" ]; then
        mkdir -p /nvram/dhs
    fi;
        ln -s /etc/dhs/DSG_Info_def.xml /nvram/dhs/DSG_Info.xml
fi;



# create reference to default Public key file if not exist
if [ ! -f "/nvram/dhs/Docsis_Test_Pub.key"  ]; then
        ln -s /etc/dhs/Docsis_Test_Pub_def.key /nvram/dhs/Docsis_Test_Pub.key
fi;




# Run DHS_RPC on init
        debug_print "Trying to start DSG Host Simulator..."
        cd /nvram/dhs
	DHS_RPC auto < /dev/console &

# 1. check if telnet deamon is running
# if 1 is true , run user defined script to enable telnet connection to ATOM
if [ -f "/nvram/sdk/docsis_relax" ]; then
    if [ -f "/nvram/sdk/dhs_net_conn" ]; then
        if [ -x "/nvram/sdk/dhs_net_conn" ]; then

                /nvram/sdk/dhs_net_conn
        fi;
    fi;
fi;




}

stop_function() {
    # Terminate daemons, remove modules, remove device nodes here
    DHS_PID=`ps | grep -v grep | grep "./DHS_RPC" | awk '{print $1}'`
    if [[ "x$DHS_PID" == "x" ]]; then 
        echo "DHS_RPC not running; cannot kill"
    else
        kill $DHS_PID
    fi
}

case $1 in
    "start")
    start_function
    ;;
    "stop")
    stop_function
    ;;
    *)
    echo "Usage: $0 {start|stop|restart}"
esac

