# Script name can be the called name, or something more meaningful.
SCRIPTNAME=$0
PATH=/usr/local/bin:/usr/bin:/bin:/sbin

. /etc/init.d/init_utilities
# ARRIS ADD START
partition_if_not_partioned(){      
    PLATFORM_NAME=`get_board_info_utility BOARD_TYPE 2>/dev/null`    
    if  [ $PLATFORM_NAME == "CE2600_BOARD_HPMG" ] ; then
            echo "board is hpmg making sure hard disk is partitoned"            
            partioned=`fdisk -l | grep sda3  `
            if [  ! -z "$partioned" ]; then          
                    echo "disk already partioned "
            else
                    echo "Partioning the hard drive "
                    diskFound=`fdisk -l | grep Disk | grep sda | cut -d " " -f3`
                    # Install modules, make device nodes, start daemons here
                    if [ -n "$diskFound" ] ; then
                        diskSize=`echo $diskFound | cut -d "." -f1`
                        if [ $diskSize -eq 500 ] ; then
                				echo "diskFound:Repair sfdisk for disksize 500" "0041" 
                				sfdisk /dev/sda < /etc/diskA.part --force
                			elif [ $diskSize -eq 1000 ] ; then
                				echo  "diskFound:Repair sfdisk for disksize 1000" "0042" 
                				sfdisk /dev/sda < /etc/diskB.part --force
                        fi 
                        echo  "Formatting the hard drive" 
                       mkfs.xfs -f -b size=4096 -d agcount=4 -s size=4096 -l size=2m -r extsize=4m,rtdev=/dev/sda1 /dev/sda2
                        mkfs.ext3 /dev/sda3
                        mkfs.ext3 /dev/sda5
                        mkfs.ext3 /dev/sda6
                        mkfs.ext3 /dev/sda7      
                    fi      
            fi
      fi
}
#ARRIS ADD END
start_function() {
    # Install System Utils
    try_command insmod /lib/modules/system_utils_linux.ko
   
   #ARRIS ADD START
    partition_if_not_partioned
   #ARRIS ADD END


    # initialize memory controller arbitration to favor vidcap/graphics
    SOC_NAME=`get_soc_info_utility NAME STRING 2>/dev/null`
    case "$SOC_NAME" in
        "SOC_NAME_CE4100")
            try_command /bin/mcu_config 0 2 -1 -1
            ;;
        "SOC_NAME_CE4200")
            try_command /bin/mcu_config 0 2 -1 -1
            ;;
    esac
}

stop_function() {
    # Remove System Utils
    rmmod system_utils_linux
}

case $1 in
    "start")
        start_function
        ;;
    "stop")
        stop_function
        ;;
    "restart")
        stop_function
        start_function
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
esac
