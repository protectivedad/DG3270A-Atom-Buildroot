# Script name can be the called name, or something more meaningful.
SCRIPTNAME=$0
PATH=/usr/local/bin:/usr/bin:/bin:/sbin:/usr/sbin:/etc/ath

. /etc/init.d/init_utilities

APP_RPC_IP=`cat /proc/ce_mailbox/appcpu_ip`

WIFI_VENDOR=NONE
if [ $(cat /proc/bus/pci/devices | cut -f2 -d$'\t' | grep -c ^1814) -ne 0 ]; then
    WIFI_VENDOR=CLR #CELENO
elif [ $(cat /proc/bus/pci/devices | cut -f2 -d$'\t' | grep -c ^14c3) -ne 0 ]; then
    WIFI_VENDOR=MTK #MEDIATEK
elif [ $(cat /proc/bus/pci/devices | cut -f2 -d$'\t' | grep -c ^168c) -ne 0 ]; then
    WIFI_VENDOR=QCA
fi

start_function() {

    if [ "$WIFI_VENDOR" == "QCA" ]; then
        debug_print "Found QCA device. Trying to start qca_rpc_wlan_config_server"
        qca_rpc_wlan_config_server $APP_RPC_IP &
        ## Added for first time use
        if [ ! -d /nvram/etc/ath ]; then
            mkdir -p /nvram/etc/ath
            touch /tmp/.apcfg
            cfg -c
            cp /nvram/etc/ath/.configData /nvram/etc/ath/defaultData
        fi
        ## directory needed for QCA wpa security
        if [ ! -d /nvram/etc/wpa2 ]; then
            mkdir /nvram/etc/wpa2
        fi

        # start WPS LED handler
        wps_gpio -P start &
        # Check for wlandbg (script to be executed):
        if [ -f /nvram/etc/ath/wlandbg ]; then
            /nvram/etc/ath/wlandbg &
        fi
    elif [ "$WIFI_VENDOR" == "CLR" ]; then
        debug_print "Found CLR device. Trying to start clr_rpc_wlan_config_server"
        clr_rpc_wlan_config_server $APP_RPC_IP &
    elif [ "$WIFI_VENDOR" == "MTK" ]; then        
        debug_print "Found MTK device. Trying to start mtk_rpc_wlan_config_server"        
        mtk_rpc_wlan_config_server $APP_RPC_IP &
        # Install the arris wps gpio handler module
        insmod /lib/modules/wifi/arris_wps_gpio_handler.ko
    else
        debug_print "No WIFI devices installed"
    fi

}

stop_function() {
        # Terminate daemons, remove modules, remove device nodes here
    if [ "$WIFI_VENDOR" == "QCA" ]; then
        killall -SIGTERM qca_rpc_wlan_config_server
        killall wps_gpio
    elif [ "$WIFI_VENDOR" == "CLR" ]; then
        killall -SIGTERM clr_rpc_wlan_config_server
    elif [ "$WIFI_VENDOR" == "MTK" ]; then
        ifconfig ra0 down
        ifconfig ra8 down
        rmmod /lib/modules/wifi/arris_wps_gpio_handler.ko
        killall -SIGTERM mtk_rpc_wlan_config_server
    else
       echo ""
    fi
}


case $1 in
    "start")
    start_function
    ;;
    "stop")
    stop_function
    ;;
    "restart")
    stop_function
    start_function
    ;;
    *)
    echo "Usage: $0 {start|stop|restart}"
esac
