# Script name can be the called name, or something more meaningful.
SCRIPTNAME=$0
PATH=/usr/local/bin:/usr/bin:/bin:/sbin

. /etc/init.d/init_utilities

# Uncomment the following line in order to be able to map the DDR used by
# the NP CPU in the App CPU's address space. 
# This affects CE2600 only and is required when using Fast Channel Change.
#MAP_COE_MEMORY=1

start_function() {
    # Install the platform config module
    try_command insmod /lib/modules/platform_config.ko

    # Setup the appropriate platform configuration
    SOC_NAME=`get_soc_info_utility NAME STRING 2>/dev/null`
    PLATFORM_NAME=`get_board_info_utility BOARD_TYPE 2>/dev/null`
    PLATFORM_REV=`get_board_info_utility BOARD_REV 2>/dev/null`
    PLATFORM_REV_MAJOR=0
    PLATFORM_REV_MINOR=0
    if [ "$PLATFORM_REV" != "REVISION_UNKNOWN" ] ; then
        PLATFORM_REV_MAJOR=`echo $PLATFORM_REV | cut -f2 -d_`
        PLATFORM_REV_MINOR=`echo $PLATFORM_REV | cut -f3 -d_`
    fi

    DIR=/etc/platform_config
    APP=platform_config_app
    PMR_APP=config_pmrs

    case "$SOC_NAME" in
    SOC_NAME_CE4100)
        $APP load $DIR/ce4100.hcfg
        $APP load $DIR/ce4100/memory_layout_512M.hcfg platform.memory.layout
        ;;
    SOC_NAME_CE4200)
        $APP load $DIR/ce4200.hcfg
        $APP load $DIR/ce4200/memory_layout_1G.hcfg platform.memory.layout
        
        REVISION_ID=`pci_query -read dev_addr=0:0:0,offset=8,size=1 2>/dev/null`
        #trim spaces and convert uppercase to lowercase
        REVISION_ID=`echo $REVISION_ID | tr -s '[:upper:]' '[:lower:]'`
        if [ "$REVISION_ID" = "c" ] || [ "$REVISION_ID" = "0c" ]  || [ "$REVISION_ID" = "1" ]
        then 
            $APP load $DIR/ce4200_D0.hcfg
        fi
        ;;
    SOC_NAME_CE5300)
        $APP load $DIR/ce5300.hcfg
        $APP load $DIR/ce5300/memory_layout_1G.hcfg platform.memory.layout
    ;;
    SOC_NAME_CE2600)
        $APP load $DIR/ce2600.hcfg

        if [ "$PLATFORM_NAME" == "CE2600_BOARD_GS" ] ; then
            if [ $PLATFORM_REV_MAJOR -ge 2 ] ; then
                $APP load $DIR/ce2600/ce2600_gs2x.hcfg
            fi
        fi
       
        # For TDP mode, enable the block below

        # --------- TDP START ---------#
        # try_command insmod /lib/modules/mem_layout.ko
        # make_dev mem_layout mem_layout
        # $APP load $DIR/ce2600/memory_layout_pmr.hcfg platform.memory.layout
        # --------- TDP END -----------#

        # Enable below line only if NOT in TDP mode.
        $APP load $DIR/ce2600/memory_layout.hcfg platform.memory.layout
        ;;
    *)
        echo "Unrecognized or unsupported processor ID: \"$SOC_NAME\"" 
        exit 1
        ;;
    esac

    # Configure the PMRs and base addresses from the memory layout
    $PMR_APP "$SOC_NAME"

    # Add the docsis ddr to the memory layout if required
    if [ $MAP_COE_MEMORY -eq 1 ] ; then
        if [ "$SOC_NAME" == "SOC_NAME_CE2600" ] ; then
            $APP load $DIR/ce2600/coe_memory.hcfg
        fi
    fi

    $APP execute platform.startup

    # Uncomment this command to dump the database created by processing the
    # config files.  Good for regression testing changes.
    # The sed removes the trailing "id" comment output by the dump app.
    #
    #   $APP dump | sed 's; */\* id .*;;' > /$SOC_NAME.txt
}

stop_function() {
    # Remove the platform config module
    rmmod platform_config

    # For TDP mode, enable the block below

    # --------- TDP START ---------#
    # SOC_NAME=`get_soc_info_utility NAME STRING 2>/dev/null`
    # case "$SOC_NAME" in
    # SOC_NAME_CE2600)
        ## Remove the mem_layout module
        # rmmod mem_layout
        ## Remove the device entries
        # rm -f /dev/mem_layout
    # esac
    # --------- TDP END -----------#
}

case $1 in
    "start")
        start_function
        ;;
    "stop")
        stop_function
        ;;
    "restart")
        stop_function
        start_function
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        ;;
esac
