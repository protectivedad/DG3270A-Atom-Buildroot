# Script name can be the called name, or something more meaningful.
SCRIPTNAME=$0
PATH=/usr/local/bin:/usr/bin:/bin:/sbin

# The legacy SPI and I2C drivers to *not* support suspend-to-RAM, and will be
# removed completely now. 

. /etc/init.d/init_utilities

start_i2c() {
   BOARD_TYPE=`get_board_info_utility BOARD_TYPE 2>/dev/null`

    # Load the linux I2c and shim modules
   try_command insmod /lib/modules/i2c-dev.ko
   try_command insmod /lib/modules/i2c-pxa.ko
   case $BOARD_TYPE in
        "CE2600_BOARD_HP")
            ;;
       "CE2600_BOARD_HPMG")
            ;;
        *)
            try_command insmod /lib/modules/i2c-pxa-pci.ko
   esac
   try_command insmod /lib/modules/idl_i2c.ko
}

start_spi() {
   # Load the linux spi and shim modules
   try_command insmod /lib/modules/spidev.ko
   try_command insmod /lib/modules/pxa2xx_spi_pci.ko
   try_command insmod /lib/modules/pxa2xx_spi.ko
   try_command insmod /lib/modules/ce5xx_spi_slv.ko
   try_command insmod /lib/modules/idl_spi.ko
}


start_smartcard() {

    # Install Smartcard 
    try_command insmod /lib/modules/idl_smartcard.ko
    make_dev_minor scard scard0
    make_dev_minor scard scard1 1 
}

start_function() {

    # Install I2C
    start_i2c &
    # Install Smartcard
    start_smartcard &
    # Install SPI
    start_spi &    

    wait 
}

stop_i2c() {
   BOARD_TYPE=`get_board_info_utility BOARD_TYPE 2>/dev/null`
  # Remove the i2c shim and linux i2c modules
  rmmod idl_i2c
   case $BOARD_TYPE in
        "CE2600_BOARD_HP")
            ;;
        "CE2600_BOARD_HPMG")
            ;;
        *)
            rmmod i2c_pxa_pci
   esac
  rmmod i2c_pxa
  rmmod i2c_dev
  rm -f /dev/i2c-*
}

stop_spi() {
  # Remove the spi shim and linux spi modules
  rmmod idl_spi
  rmmod ce5xx_spi_slv
  rmmod pxa2xx_spi
  rmmod pxa2xx_spi_pci
  rmmod spidev
  rm -f /dev/spidev*
}

stop_function() {
  # Remove the modules
  rmmod idl_smartcard

  stop_i2c
  stop_spi
  # Cleanup device nodes
  rm -f  /dev/scard0 /dev/scard1
}

case $1 in
    "start")
        start_function
        ;;
    "stop")
        stop_function
        ;;
    "restart")
        stop_function
        start_function
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
esac
