platform
{
    startup
    {
        {
            action      "load"
            filename    "/etc/platform_config/common.hcfg"
        }
        {
            action      "load"
            filename    "/etc/platform_config/ce4200/local_tweaks_1G.hcfg"
        }
    }

    memory { media_base_address = 0xC800000   /* 200 Megabytes */ }

    software
    {
        drivers
        {   
            avcap
            {
                i2c { hdmi_rx_bus = 2 }

                video { channel_map = 0 }

            }

            display
            {
                stereo { lrid_gpio = 78 }
            }

            smd
            {
                firmware
                {
                    audio_dsp0  { filename = "/lib/firmware/smd/audio_fw_dsp0.bin" location = "smd_fw_ADSPFW0" size = 0 }
                    audio_dsp1  { filename = "/lib/firmware/smd/audio_fw_dsp1.bin" location = "smd_fw_ADSPFW1" size = 0 }
                    video_ces_gv_code  { filename = "/lib/firmware/smd/video_ces_gv_pe_gen4.bin" location = "smd_fw_VIDEO_CES_GV_CODE" size = 0 }
                    video_ces_gv_bss  { filename = "/lib/firmware/smd/video_ces_gv_pe_gen4_bss.bin" size = 0 }
                    video_ces_mfd  { filename = "/lib/firmware/smd/video_ces_mfd_md_gen4.bin" size = 0 }
                    video_ces_mp4_normal  { filename = "/lib/firmware/smd/video_ces_mfd_mp4_normal.bin" location = "smd_fw_VIDEO_CES_MP4_NORMAL" size = 0 }
                    video_ces_mp4_dp  { filename = "/lib/firmware/smd/video_ces_mfd_mp4_dp.bin" location = "smd_fw_VIDEO_CES_MP4_DP" size = 0 }
                    vidpproc_code     { filename = "/lib/firmware/smd/vpp_fw_code_gen3.bin"   location = "smd_fw_VPPFW"   size = 0 }
                    vidpproc_bss      { filename = "/lib/firmware/smd/vpp_fw_bss_gen3.bin"   location = "smd_fw_VPPFW"   size = 0 }
                    demux_fw    { filename = "/lib/firmware/smd/tsd_fw_ver3.bin"   location = "smd_DMX_FW_IMAGE" size = 0 }
                }
                //section added to support secure FW load
                sgnd_firmware 
                {
                    demux_fw { filename = "/lib/firmware/smd/tsd_fw_ver3_signed.bin" location = "smd_DMX_FW_IMAGE" size = 0 }
                    video_ces_gv_code  { filename = "/lib/firmware/smd/video_ces_gv_pe_gen4_signed.bin" location = "smd_fw_VIDEO_CES_GV_CODE" size = 0 }
                    video_ces_gv_bss  { filename = "/lib/firmware/smd/video_ces_gv_pe_gen4_bss_signed.bin" size = 0 }
                    video_ces_mfd  { filename = "/lib/firmware/smd/video_ces_mfd_md_gen4_signed.bin"  size = 0 }
                    video_ces_mp4_normal  { filename = "/lib/firmware/smd/video_ces_mfd_mp4_normal_signed.bin" location = "smd_fw_VIDEO_CES_MP4_NORMAL" size = 0 }
                    video_ces_mp4_dp  { filename = "/lib/firmware/smd/video_ces_mfd_mp4_dp_signed.bin" location = "smd_fw_VIDEO_CES_MP4_DP" size = 0 }
                }
                audio
                {
                    capture { i2s0_bitclk_direction = 1 }
                }

                core
                {
                    frame_buffer_properties { tile_width = 128 }
                }
                clock
                {
                    clock_properties 
                    {
                        master_clock_source = 0 // EXTERNAL_VCXO = 0, MASTER_DDS = 1, INTERNAL_VCXO = 7
                        default_clock_domain = 1  // Audio = 0,  Video = 1,  Local = 2                    
                    }
                }
            }
        }
    }
}
